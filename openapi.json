	"paths": {
		"/api/version": {
			"get": {
				"summary": "Get current version",
				"operationId": "getVersion",
				"description": "Wanna know the version of the Meeshkan Bank? Use this!\n",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"version": {
											"type": "string",
											"example": "0.0.0"
										}
									}
								}
							}
						}
					}
				},
				"tags": ["version"]
			}
		},
		"/api/admin/authentication": {
			"post": {
				"summary": "Authenticate as admin",
				"operationId": "authenticateAsAdmin",
				"description": "Allows admin to authenticate using the password.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"success": {
											"type": "boolean",
											"example": true
										}
									}
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"status": {
											"type": "number",
											"example": 401
										},
										"error": {
											"type": "object",
											"properties": {
												"message": {
													"type": "string",
													"example": "Incorrect password"
												}
											}
										}
									}
								}
							}
						}
					}
				},
				"tags": ["auth"]
			}
		},
		"/api/client/authentication": {
			"post": {
				"summary": "Authenticate as client",
				"operationId": "authenticateAsClient",
				"description": "Allows clients to authenticate using their email and password.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"client": {
											"type": "object",
											"properties": {
												"id": {
													"type": "string",
													"example": "fd800015-6d09-4469-92a2-61d8fd25723f"
												},
												"name": {
													"type": "string",
													"example": "Makenna Smutz"
												},
												"email": {
													"type": "string",
													"example": "makenna@meeshkan.com"
												},
												"password": {
													"type": "string",
													"example": "******"
												},
												"balanceInEuroCents": {
													"type": "number",
													"example": 1493
												}
											}
										}
									}
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"status": {
											"type": "number",
											"example": 401
										},
										"error": {
											"type": "object",
											"properties": {
												"message": {
													"type": "string",
													"example": "Email or password incorrect"
												}
											}
										}
									}
								}
							}
						}
					}
				},
				"tags": ["auth"]
			}
		},
		"/api/clients": {
			"get": {
				"summary": "Get client list",
				"operationId": "getClients",
				"description": "Allows admin to view list of clientele.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"clients": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"id": {
														"type": "string"
													},
													"name": {
														"type": "string"
													},
													"email": {
														"type": "string"
													},
													"password": {
														"type": "string"
													},
													"balanceInEuroCents": {
														"type": "number"
													}
												},
												"required": [
													"id",
													"name",
													"email",
													"password",
													"balanceInEuroCents"
												]
											},
											"example": [
												{
													"id": "fd800015-6d09-4469-92a2-61d8fd25723f",
													"name": "Makenna Smutz",
													"email": "makenna@meeshkan.com",
													"password": "also not secure",
													"balanceInEuroCents": 127
												}
											]
										}
									}
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"status": {
											"type": "number",
											"example": 401
										},
										"error": {
											"type": "object",
											"properties": {
												"message": {
													"type": "string",
													"example": "Can only fetch clients as root"
												}
											}
										}
									}
								}
							}
						}
					}
				},
				"tags": ["admin-actions"]
			}
		},
		"/api/client": {
			"get": {
				"summary": "Get current client",
				"operationId": "getClient",
